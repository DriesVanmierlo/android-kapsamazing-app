<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.DashboardFragment">


    <TextView
        android:id="@+id/newKapsalonText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register new kapsalon"
        android:layout_marginTop="32px"
        android:textSize="24sp"
        android:textColor="@color/brown"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        />

    <SearchView
        android:id="@+id/newkapsalonSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        android:queryHint="Enter code here"
        android:iconifiedByDefault="false"
        android:gravity="center"
        android:layout_marginTop="32px"
        app:layout_constraintTop_toBottomOf="@+id/newKapsalonText"
        />

    <TextView
        android:id="@+id/codeInfoText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fill in the code of your meal to rate your kapsalon!"
        app:layout_constraintTop_toBottomOf="@+id/newkapsalonSearch"
        android:layout_marginTop="32px"
        tools:ignore="MissingConstraints"
        android:layout_marginLeft="128px"
        android:textColor="@color/lightBrown" />


</androidx.constraintlayout.widget.ConstraintLayout>